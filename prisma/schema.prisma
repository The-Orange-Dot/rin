generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid()) @unique
  name        String
  size        String
  details     String
  likes       Int      @default(0)
  quantity    Int      @default(1)
  price       Float    @default(0.00)
  thumbnail   String
  images      String[]
  category    String   @default("misc")
  brand       String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  description String[]
  rating      Float    @default(0.0)
  ingredients String[]
  reviews     Review[]
}

model User {
  id         String  @id @default(cuid()) @unique
  username   String  @unique
  password   String
  subscriber Boolean @default(false)
  image      String  @default("/default_profile_image.jpeg")
  firstName  String  @map("first_name")
  lastName   String  @map("last_name")
  address1   String?
  address2   String?
  city       String?
  country    String?
  state      String?
  zipcode    String?
  email      String @unique
  homePhone  String? @map("home_phone")
  mobilePhone String? @map("mobile_phone")
  reviews    Review[]
  comments   Comment[]
  orderHistory OrderHistory[]
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  buyHistory  UserOrderHistory[]
}

model OrderHistory {
  id            String  @id @default(cuid()) @unique
  username      String?
  user User? @relation(fields: [username], references: [username], onDelete: SetNull) 
  createdAt     DateTime @default(now()) @map("created_at")
  products      Json
  registeredUser Boolean 
  name        String
  address1    String
  address2    String?
  city        String
  state       String
  country     String
  zipcode     String
  subscriber Boolean @default(false)
}

model UserOrderHistory {
  id            String  @id @default(cuid()) @unique
  userId        String
  user          User @relation(fields: [userId], references: [id] , onDelete: Cascade)
  createdAt     DateTime @default(now()) @map("created_at")
  name          String
  quantity      Int
  price         Float
  size          String
  image         String
  brand         String
  reviewId      String?
  review        Review?  @relation(fields: [reviewId], references: [id], onDelete: SetNull)
  reviewWritten Boolean @default(false)
}

model Review {
  id            String  @id @default(cuid()) @unique
  userReview    User @relation(fields: [userId], references: [id])
  userId        String
  productReview Product @relation(fields: [productId], references: [id])
  productId     String
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  rating        Int 
  description   String
  helpful       Int @default(0)
  report        Int @default(0)
  buyHistory    UserOrderHistory[]
}

model Comment {
  id            String  @id @default(cuid()) @unique
  userReview    User @relation(fields: [userId], references: [id])
  userId        String
  comment       String
}
