generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  size        String
  details     String
  likes       Int      @default(0)
  quantity    Int      @default(1)
  price       Float    @default(0.00)
  image       String
  category    String   @default("misc")
  brand       String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  description String[]
  rating      Float    @default(0.0)
  ingredients String[]
  reviews     Review[]
}

model User {
  id         String  @id @default(cuid())
  username   String
  password   String
  subscriber Boolean @default(false)
  image      String  @default("/default_profile_image.jpeg")
  firstName  String  @map("first_name")
  lastName   String  @map("last_name")
  address    String?
  city       String?
  country    String?
  state      String?
  zipcode    String?
  email      String
  homePhone  String? @map("home_phone")
  mobilePhone String? @map("mobile_phone")
  reviews    Review[]
  comments   Comment[]
  orderHistory OrderHistory[]
}

model OrderHistory {
  id            String  @id @default(cuid())
  userId        String
  userOrderHistory User @relation(fields: [userId], references: [id])
  name          String
  quantity      Int
  createdAt     DateTime @default(now()) @map("created_at")
  image         String
  brand         String
  price         Float    @default(0.00)
  size          String
  details       String
}

model Review {
  id            String  @id @default(cuid())
  userReview    User @relation(fields: [userId], references: [id])
  userId        String
  productReview Product @relation(fields: [productId], references: [id])
  productId     String
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  rating        Int 
  description   String
  helpful       Int @default(0)
  report        Int @default(0)
}

model Comment {
  id            String  @id @default(cuid())
  userReview    User @relation(fields: [userId], references: [id])
  userId        String
  comment       String
}
